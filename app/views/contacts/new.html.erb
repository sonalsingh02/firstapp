<div class="container">
	<div id = "dialog_container">
		 <div class="row">
		 	<div class="col-md-6 col-md-offset-3">
		 		<div class="panel panel-login">
		 			<div class="panel-heading">
						<div align="center">
							<h3>Send A message to Us</h3>
							<hr>
						</div>
					</div>
					<div class="panel-body">
			        	<div class="row">
			        		<div class="col-lg-12">
			                	<%= form_for @contact do |f| %>
					                <div class="form-group">
					                    <%= f.label :name, class: "control-label" %><br />
					                    <%= f.text_field :name, class: "form-control" ,required: true %>
					                </div>
				                  	<div class="form-group">
				                    	<%= f.label :email, class: "control-label" %><br />
				                    	<%= f.email_field :email, class: "form-control" ,required: true %>
				                  	</div>
			                  		<div class="form-group">
			                    		<%= f.label :mobile_number, class: "control-label" %><br />
			                    		<%= f.text_field :mobile_number, class: "form-control" ,required: true %>
			                  		</div>
			                  		<div class="form-group">
			                    		<%= f.label :message, class: "control-label" %><br />
			                    		<%= f.text_area :message, class: "form-control" ,required: true%>
			                  		</div>
			                  		<div class="actions">
			                    		<%= f.submit "Send a message" ,:class => 'form-control btn btn-primary'%>
			                  		</div>
			                	<% end %>
			              	</div>
			              	<div class="col-xs-5 map">
      							<h4>Locate me<h4>
      								<div class="embed-responsive embed-responsive-16by9">
        								<!--<iframe width="900" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBS7WSJXYAZ8ifUB-IdLECR6LfNTzk-nMU&amp;q=30.7052803,76.6893326"
 											allowfullscreen>
 										</iframe>-->
 										<iframe width="600" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyD0p0dbLO85U4pV8sOB8d4VHfxQdW6fogc&q=place_id:ChIJCVVFE_7uDzkRHyCDUu2cznA"allowfullscreen>
 										</iframe> 
        								
      								</div>
							</div>
            			</div>
          			</div>
				</div>
			</div>
		</div>
	</div>
</div>
