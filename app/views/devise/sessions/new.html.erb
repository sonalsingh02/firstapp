<div class="container">
  <div id = "dialog_container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="panel panel-login">
            <div class="panel-heading">
              <div class="row">
                <div class="col-xs-6">
                   <%= link_to "Login", new_user_session_path,class: 'active',id: 'login-form-link',method: :get %>
                </div>
                <div class="col-xs-6">
                  <%= link_to "Register", new_user_registration_path,id: 'register-form-link', method: :get %>
                </div>
              </div>
              <hr>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-lg-12">
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>
                    <div class="form-group">
                      <div class="field">
                        <%= f.label :email %><br />
                        <%= f.email_field :email, autofocus: true ,:class => 'form-control' %>
                        
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="field">
                        <%= f.label :password %>
                        <%= link_to(" Forgot Password?", new_user_password_path, id:"forget-password", class:"forget-password") %>
                        <%= f.password_field :password, autocomplete: "off" ,:class => 'form-control'%>
                        
                      </div>
                    </div>
                  <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end -%>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-sm-6 col-sm-offset-3">
                        <div class="actions">
                          <%= f.submit "Log in" ,:class => 'form-control btn btn-login'%>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>