<div class="container">
  <div id = "dialog_container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-login">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-6">
                <%= link_to "Login", new_user_session_path,id: 'login-form-link',method: :get %>
              </div>
              <div class="col-xs-6">
                <%= link_to "Register", new_user_registration_path,class: 'active',id: 'register-form-link', method: :get %>
              </div>
            </div>
            <hr>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-12">
                <%= form_for(resource, as: resource_name, url: new_user_registration_path(resource_name)) do |f| %>
                  <% if @contact.errors.any? %>
                    <%= render 'shared/errors', object: @contact  %>
                  <% end %>
                  <div class="form-group">
                    <%= f.label :name, class: "control-label" %><br />
                    <%= f.text_field :name, class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :email, class: "control-label" %><br />
                    <%= f.email_field :email, class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :mobile_number, class: "control-label" %><br />
                    <%= f.number_field :mobile_number, class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :description, class: "control-label" %><br />
                    <%= f.text_area :description, class: "form-control" %>
                  </div>
                  <div class="actions">
                    <%= f.submit "Sign up" ,:class => 'form-control btn btn-register'%>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

